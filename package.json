{
  "name": "static-site-starter-kit",
  "version": "1.0.0",
  "description": "Static site starter kit",
  "author": "kkoudev",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/miccomi/static-site-starter-kit.git"
  },
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "predev": "run-s clean",
    "dev": "run-p watch server:dev",
    "stg": "run-s dist:stg server:build",
    "prod": "run-s dist:prod server:build",
    "clean": "rimraf './public/**/*'",
    "prebuild": "run-s clean",
    "build": "cross-env NODE_ENV=production run-p build:*",
    "postbuild": "run-s postbuild:*",
    "build:script": "webpack",
    "build:style": "postcss --verbose --base ./src --dir ./public './src/assets/styles/**/!(_)*.css'",
    "build:view": "pug -P -b ./src/views/root -O ./pug.config.js -o ./public ./src/views/root",
    "postbuild:critical": "node ./config/tasks/critical.js",
    "postbuild:sitemap": "node ./config/tasks/sitemap.js",
    "dist:local": "cross-env APP_ENV=local GTM_ENV=development run-s build",
    "dist:stg": "cross-env APP_ENV=staging GTM_ENV=development run-s build",
    "dist:prod": "cross-env APP_ENV=production GTM_ENV=production run-s build",
    "watch": "run-p watch:* watch:lint:*",
    "prewatch:style": "run-s build:style",
    "watch:style": "chokidar './src/assets/styles/**/*.css' -c 'yarn build:style'",
    "watch:view": "pug -w -P -b ./src/views/root -O ./pug.config.js -o ./public ./src/views/root",
    "watch:lint:view": "chokidar './src/views/**/*.pug' -c 'yarn lint:view'",
    "watch:lint:tsc": "tsc -w -p . --noEmit",
    "watch:lint:style": "chokidar './src/assets/styles/**/*.css' -c 'yarn lint:style'",
    "lint": "run-p lint:*",
    "lint:view": "pug-lint -c .pug-lintrc.js ./src/views",
    "lint:tsc": "tsc -p . --noEmit && :",
    "lint:script": "eslint --fix --ext .ts,tsx ./src && :",
    "lint:style": "stylelint --fix ./src/**/*.css && :",
    "server": "run-p server:*",
    "server:dev": "webpack-dev-server",
    "server:build": "http-server ./public -p 8001 -o index.html"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.pug": [
      "yarn lint:view"
    ],
    "*.{ts,tsx}": [
      "yarn lint:tsc",
      "yarn lint:script"
    ],
    "*.css": [
      "yarn lint:style"
    ]
  },
  "resolutions": {
    "chokidar": "^3.4.1"
  },
  "dependencies": {
    "animated-scroll-to": "^2.0.10",
    "fg-loadcss": "^3.1.0",
    "intersection-observer": "^0.11.0",
    "lodash.assign": "^4.2.0",
    "picturefill": "^3.0.3",
    "rxjs": "^6.6.2",
    "scrollama": "^2.2.1",
    "scrollreveal": "^4.0.7",
    "ts-polyfill": "^3.8.2",
    "vanilla-lazyload": "^17.1.0"
  },
  "devDependencies": {
    "@babel/core": "^7.11.1",
    "@babel/plugin-proposal-class-properties": "^7.10.4",
    "@babel/plugin-proposal-decorators": "^7.10.5",
    "@babel/preset-env": "^7.11.0",
    "@babel/preset-typescript": "^7.10.4",
    "@types/node": "^14.0.27",
    "@types/picturefill": "^3.0.0",
    "@typescript-eslint/eslint-plugin": "^3.8.0",
    "@typescript-eslint/parser": "^3.8.0",
    "autoprefixer": "^9.8.6",
    "babel-loader": "^8.1.0",
    "babel-plugin-module-resolver": "^4.0.0",
    "babel-plugin-transform-remove-console": "^6.9.4",
    "browserslist": "^4.13.0",
    "chokidar": "^3.4.1",
    "chokidar-cli": "^2.1.0",
    "copy-webpack-plugin": "^6.0.3",
    "core-js": "^3.6.5",
    "critical": "^2.0.1",
    "cross-env": "^7.0.2",
    "cssnano": "^4.1.10",
    "cssnano-preset-advanced": "^4.0.7",
    "dayjs": "^1.8.32",
    "eslint": "^7.6.0",
    "eslint-loader": "^4.0.2",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jest": "^23.20.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-simple-import-sort": "^5.0.3",
    "http-server": "^0.12.3",
    "husky": "^4.2.5",
    "imagemin-webpack-plugin": "^2.4.2",
    "jest": "^26.2.2",
    "lint-staged": "^10.2.11",
    "npm-run-all": "^4.1.5",
    "postcss-assets": "^5.0.0",
    "postcss-cli": "^7.1.1",
    "postcss-flexbugs-fixes": "^4.2.1",
    "postcss-functions": "^3.0.0",
    "postcss-image-set-polyfill": "^1.0.0",
    "postcss-import": "^12.0.1",
    "postcss-normalize": "^9.0.0",
    "postcss-preset-env": "^6.7.0",
    "postcss-reporter": "^6.0.1",
    "postcss-sort-media-queries": "^1.7.25",
    "postcss-webfont": "^3.1.1",
    "prettier": "^2.0.5",
    "pug": "^3.0.0",
    "pug-cli": "github:pugjs/pug-cli#master",
    "pug-lint": "^2.6.0",
    "rimraf": "^3.0.2",
    "robots-generator": "^2.3.6",
    "sitemap": "^6.2.0",
    "stylelint": "^13.6.1",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-rational-order": "^0.1.2",
    "stylelint-config-rscss-recommended": "^1.0.0",
    "stylelint-order": "^4.1.0",
    "stylelint-prettier": "^1.1.2",
    "terser-webpack-plugin": "^4.0.0",
    "typescript": "^3.9.7",
    "webpack": "^4.44.1",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.0",
    "write-file-webpack-plugin": "^4.5.1",
    "zlib": "^1.0.5"
  }
}
